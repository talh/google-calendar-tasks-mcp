# Timezone for calendar operations (IANA format)
# Default: system timezone
# GOOGLE_MCP_TIMEZONE=America/New_York

# Path to OAuth credentials file
# Default: OS-specific (~/.config/google-calendar-tasks-mcp/credentials.json)
# GOOGLE_MCP_CREDENTIALS_PATH=/path/to/credentials.json

# Directory for audit logs (disabled if not set)
# GOOGLE_MCP_AUDIT_LOG_DIR=/path/to/audit/dir

# Path to guardrails config file
# Default: ./guardrails.json (relative to server directory)
# GOOGLE_MCP_GUARDRAILS_PATH=/path/to/guardrails.json
